			DisplayOperatorSelection();
			break;
		}
		case MOD_ANTIRECOIL:{
			DisplayAntiRecoilMenu(0);
		   	break;
		}
		case MOD_GUN_SELECTION:{
			DisplayGunSelection();
		   	break;
		}
		case MOD_CONFIG:{
			DisplayConfiguration();
		   	break;
