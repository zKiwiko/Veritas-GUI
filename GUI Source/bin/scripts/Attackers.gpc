function EditARValues(value, min, max){
	if(event_press(TurnOn) || event_press(Previous)){
		if(get_ival(Modifier)) value -= 10;
		else value --;                           
	}
	if(event_press(TurnOff) || event_press(Next)){
		if(get_ival(Modifier)) value += 10;
		else value ++;
	}

	return value = clamp(value, min, max);
}	
