	horizontalAR = gunARInfo[1 + (3 * activeGun)];

	DisplayAntiRecoilMenu(arVal);
}
function CloseAvility(){
	abilityReleasingTime 	= 0;
	abilityCountDown		= 0;
	abilityTimeCheck		= FALSE;
	abilityActive			= FALSE;
	DisplaySwitchGun();	
}
function CheckAbilityOff(){	
	if(abilityTimeCheck){				
		abilityCountDown += get_rtime();
		if(abilityCountDown >= abilityReleasingTime) {
			if(activeOperator == FINKA){
				abilityTimeCheck = FALSE;
				ActivateOperator();
			}
			CloseAvility();
			return;
		}
	}
	switch(activeOperator){
		case ASH:{
			if(	ButtonRelease(WeaponSwap)){
				abilityReleasing = TRUE;
				//DisplaySwitchGun();
				CloseAvility();
			}
			if(	ButtonRelease(Ability)){
				abilityReleasing = TRUE;
				CloseAvility();
			}
			if(ButtonPress(Shoot)) {
				abilityDeployCount = abilityDeployCount + 1;
			}
			if(abilityDeployCount == 2 && abilityActive == TRUE) {
				abilityDeployCount = 0;
				abilityReleasing   = TRUE;
				DisplaySwitchGun();
				CloseAvility();
			}
			break;
		}
		case GLAZ:{
			if(	ButtonRelease(WeaponSwap)){ 
				abilityReleasing 	= TRUE;
				abilityFocus 		= FALSE;
				CloseAvility();
			}
			if(	ButtonRelease(Ability)){				
				abilityReleasing 	= TRUE;
				abilityFocus 		= FALSE;
				FlipSightOn 		= FALSE;
				activeGun = GUN_PRIMARY;
				CloseAvility();
			}
			break;
		}
		case IQ:{
			if(	ButtonRelease(WeaponSwap)){ 
				activeGun	= 0;
				CloseAvility();
			}
			if(	ButtonRelease(Ability)){
				CloseAvility();
				abilityReleasing = TRUE;
				abilityFocus = FALSE;
			}
			break;
		}
		case BUCK:{
			if(	ButtonRelease(Ability)){
				activeGun	= GUN_PRIMARY;
				CloseAvility();
			}
			if(	ButtonRelease(WeaponSwap)){
				activeGun	= !activeGun;
				DisplaySwitchGun();
				if(activeGun == GUN_PRIMARY){
					gunRapidFire = TRUE;
					abilityFocus = TRUE;
					abilityActive = TRUE;
					PrintAvilityName();
				}
			}
			
			break;
		}
		case CAPITAO:{
			if(	ButtonRelease(WeaponSwap)){
				abilityReleasing = TRUE;
				DisplaySwitchGun();
				CloseAvility();
			}
			if(	ButtonRelease(Ability)){
				abilityReleasing = TRUE;
				CloseAvility();
			}
			break;
		}
		case HIBANA:{
			if(	ButtonRelease(WeaponSwap)){
				abilityReleasing = TRUE;
				DisplaySwitchGun();
				CloseAvility();
			}

			break;
		}
		case ZOFIA:{
			if(	ButtonRelease(WeaponSwap)){
				abilityReleasing = TRUE;
				DisplaySwitchGun();
				CloseAvility();
			}
			if(	ButtonRelease(Ability)){
				abilityReleasing = TRUE;
				CloseAvility();
			}
			break;
		}
		case MAVERICK:{
			if(	ButtonRelease(Ability) || ButtonRelease(WeaponSwap)){
				abilityReleasing = TRUE;
				CloseAvility();
			}
			break;
		}
		case IANA:{
			break;
		}
		case ZERO:{
			if(	ButtonRelease(WeaponSwap)){
				abilityReleasing = TRUE;
				DisplaySwitchGun();
				CloseAvility();
			}
			if(	ButtonRelease(Ability)){
				abilityReleasing = TRUE;
				CloseAvility();
			}
			break;
		}
		case FLORES:{			
			if(ButtonRelease(Reload) && get_ptime(Reload) > 1000){
				abilityActive = TRUE;
				abilityReleasingTime 	= 10000;
				abilityCountDown		= 0;
				abilityTimeCheck		= TRUE;
				abilityDeployCount ++;
			}
			if(ButtonRelease(Shoot)) CloseAvility();
			if(abilityDeployCount > 0 && ButtonRelease(ObservationTools)){
				abilityReleasing = TRUE;
				abilityDeployCount = 0;
				CloseAvility();
			}
			if(abilityDeployCount > 0 && ButtonRelease(Prone)){
				abilityReleasing = TRUE;
				abilityDeployCount = 0;
				CloseAvility();
			}
			if(ButtonRelease(WeaponSwap)){
				abilityReleasing = TRUE;
				CloseAvility();
				activeGun	= !activeGun;
				DisplaySwitchGun();
			}
			if(ButtonRelease(DeployDrone)){
				abilityReleasing = TRUE;
				CloseAvility();
			}
			if(abilityDeployCount == 0 && ButtonRelease(Ability)){
				abilityReleasing = TRUE;
				CloseAvility();			
			}
			break;
		}
		case AMARU:{
			if(	ButtonRelease(WeaponSwap)){
				abilityReleasing = TRUE;
				DisplaySwitchGun();
				CloseAvility();
			}
			if(	ButtonRelease(Ability)){
				abilityReleasing = TRUE;
				CloseAvility();
			}
			if(	ButtonHold(Shoot) && get_ptime(Shoot) > 1000){
				abilityReleasing = TRUE;
				DisplaySwitchGun();
				CloseAvility();	
			}
			break;
		}
		case OSA:{
			if(	ButtonHold(Reload) && get_ptime(Reload) > 1700){
				CloseAvility();
			}			
			if(	ButtonRelease(Ability)		||	ButtonRelease(Gadget)	||
				ButtonRelease(Sprint)	||	ButtonRelease(Melee)){
				abilityReleasing = TRUE;
				CloseAvility();
			}
			if(ButtonRelease(WeaponSwap) || ButtonPress(Shoot)){
				abilityReleasing = TRUE;
				//activeGun	= !activeGun;
				DisplaySwitchGun();
				CloseAvility();
			}
			break;
		}
		case GRIM:{
			if(ButtonRelease(Shoot)) abilityDeployCount++;
			if(	ButtonRelease(Ability)){
				abilityReleasing = TRUE;
				CloseAvility();
			}
			if(	ButtonRelease(WeaponSwap) || abilityDeployCount == 4){
				abilityReleasing = TRUE;
				//activeGun	= !activeGun;
				DisplaySwitchGun();
				CloseAvility();
			}
			break;
		}
		case DEIMOS:{
		
		abilityCountDown = max(0, abilityCountDown - get_rtime());
		
			if( ButtonRelease(Ability) || abilityCountDown <= get_rtime()){
				abilityReleasing = TRUE;
				abilityTimeCheck = TRUE;
				abilityCountDown = 0;
				activeGun = GUN_SECONDARY;
				DisplaySwitchGun();
				CloseAvility();
			}
			
			break;
		}
	}
}

